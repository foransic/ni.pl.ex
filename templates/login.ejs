<%- include('header'); %>
  <div class="row">
    <div class="col-md-7">
      <h1>Ni.Pl.Ex</h1>
      <%- include('readme'); %>
    </div>
    <div class="col-md-4 col-md-offset-1">
      <h3>1. Fill your Nike+ credentials</h3>
      <form class="form-login" method="post" action="login">
        <label for="username" class="sr-only">Username (=email)</label>
        <input type="email" name="username" id="username" class="form-control" placeholder="Username">
        <label for="password" class="sr-only">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
        <p class="text-right">
          <button class="btn" type="submit">Get my activities</button>
        </p>
      </form>
      <% if (typeof error != 'undefined') { %>
        <p class="bg-danger">
        <% if (error == 'DEFAULT') { %>
          Something wrong happened. Please try again later.
        <% } else if (error == 'CREDENTIAL') { %>
          Email / password doesn't match.
        <% } %>
        </p>
      <% } %>
    </div>
  </div> <!-- row -->
<%- include('footer'); %>